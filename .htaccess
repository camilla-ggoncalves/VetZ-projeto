# Desabilitar listagem de diretorios
Options -Indexes

# Habilitar rewrite
RewriteEngine On
RewriteBase /projeto/vetz/

# Permitir acesso direto a arquivos reais (uploads, css, js, etc)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Redirecionar tudo mais para public/index.php
RewriteRule ^(.*)$ public/index.php [L,QSA]
